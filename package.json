{
  "name": "tshelpers",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon --ext js,ts,json,env --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main.ts",
    "prepare": "husky init",
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf tsconfig.build.tsbuildinfo && rm -rf ./dist",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check"
  },
  "dependencies": {
    "dotenv": "16.5.0",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/compat": "1.3.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.32.0",
    "@jest/globals": "30.0.4",
    "@jest/types": "30.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "24.0.13",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.38.0",
    "cross-env": "7.0.3",
    "eslint": "9.32.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-tsdoc": "0.4.0",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jest": "30.0.0",
    "lint-staged": "16.1.2",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "supertest": "7.1.3",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "description": "Project bootstrapped using [NodeJS Starter ToolKit](https://github.com/vitorsalgado/create-nodejs-ts).   Visit the repository for more details.",
  "version": "1.0.0",
  "author": "Costas Kirgoussios",
  "license": "MIT"
}
