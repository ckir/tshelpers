{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "listFiles": false,
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "removeComments": false,
    "resolveJsonModule": true,
  //   "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/ansi-sequence-parser/src",    
    "src/antsy/src",
    "src/grid-layout/src",
    "src/kkirbatski-rectangle/src",
    "src/positional-tokenizer/src",
    "src/terminal-canvas/src",
    "submodules/typeflex/src"
  ]
}
